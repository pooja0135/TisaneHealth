<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="5dp"
        android:layout_margin="@dimen/_10sdp">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pan Card Image"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <Button
                android:id="@+id/btnPan"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:textSize="@dimen/_14sdp"
                android:text="Upload Pan"
                android:background="@drawable/registration_background"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:id="@+id/ivPan"/>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="5dp"
        android:layout_margin="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Aadhar Card Image"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <Button
                android:id="@+id/btnAadhar"
                android:layout_marginRight="@dimen/_10sdp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:textSize="@dimen/_14sdp"
                android:text="Upload Aadhar"
                android:background="@drawable/registration_background"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:id="@+id/ivAadhar"/>
</LinearLayout>
