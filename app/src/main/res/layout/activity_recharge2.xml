<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">

        <ImageView
            android:id="@+id/ivBack"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:rotation="180"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow_right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:text="Mobile Recharge"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>



    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.tisanehealth.Helper.MovingViewPager
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:id="@+id/viewpagerOffer"/>

                <RelativeLayout
                    android:layout_below="@+id/rlHeader"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp">
                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivUser"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:src="@drawable/circle"
                            android:tint="@color/colorAccent"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/tvAlphabet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvContactName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/tvContactNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/black"
                            />



                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvChange"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/rectangle_red"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingRight="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingTop="@dimen/_2sdp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_200"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <RelativeLayout
                        android:id="@+id/rlOperatorName"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Operator"
                            android:textSize="@dimen/_11sdp"
                            android:id="@+id/tvOperatorName"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_down_arrow"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlCircleName"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tvCircleName"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select State"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_down_arrow"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_200"/>

                <RelativeLayout
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/rectangle_grey">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:text="\u20B9"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Amount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:id="@+id/etAmount"
                        />

                    <TextView
                        android:id="@+id/tvPlan"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Plan"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rectangle_red"
                        android:textSize="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingRight="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingTop="@dimen/_2sdp"

                        android:textColor="@color/white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/linearlayout1"
                        android:background="@color/colorAccent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:text="Proceed to Recharge"
                        android:textSize="@dimen/_14sdp"
                        android:textAllCaps="false"
                        android:id="@+id/btnProceed"
                        android:textColor="@color/white"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:id="@+id/linearlayout1"
                        android:layout_marginTop="@dimen/_100sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">


                        <CheckBox
                            android:padding="@dimen/_minus10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:buttonTint="@color/colorAccent"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_15sdp"
                            app:srcCompat="@drawable/ic_check_box"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    app:srcCompat="@drawable/ic_double_arrow"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fast Forward"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_12sdp"/>
                            </LinearLayout>

                            <TextView
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:text="Instant payment from your No2Cash wallet"
                                android:textColor="@color/grey_500"/>

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>






        </RelativeLayout>
    </ScrollView>





</LinearLayout>