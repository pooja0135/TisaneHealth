<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llDetail"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:text="Total  Member :"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvTotalMember"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:text="Total Active Member :"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvActiveMember"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:text="Total InActive Member :"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvInActiveMember"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/llDetail"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recylerview"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivFilter"
        android:layout_above="@+id/recylerview"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:srcCompat="@drawable/ic_filter"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/ivNoDatafound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/no_data_found"/>
</RelativeLayout>
