<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#95000000">
    <androidx.cardview.widget.CardView
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_margin="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
              >
                <RelativeLayout
                    android:id="@+id/rlCancel"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        app:srcCompat="@drawable/ic_cancel"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filter By"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/tvClear"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout

                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvMemberId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sponsor ID"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:visibility="gone"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/etMemeberId"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/rectangle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp" />
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From Date"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/etFromDate"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:focusable="false"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/rectangle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp" />
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Date"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/etToDate"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:focusable="false"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/rectangle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp" />
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <RelativeLayout
                        android:id="@+id/rlPosition"
                        android:background="@drawable/rectangle_grey"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/spinnerPosition"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvstatus"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <RelativeLayout

                        android:id="@+id/rlStatus"
                        android:background="@drawable/rectangle_grey"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/spinnerStatus"></Spinner>
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlApply"

                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
             >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
