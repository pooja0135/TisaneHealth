<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member Id"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:editable="false"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_11sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:id="@+id/etMemberId"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:editable="false"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_11sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:id="@+id/etMemberName"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount(INR)*"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/etAmount"
                android:paddingLeft="@dimen/_5sdp"
                android:inputType="number"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Bank Name*"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp">
                <Spinner
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:textSize="@dimen/_11sdp"
                    android:id="@+id/spinnerCompanyBank"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:background="@drawable/ic_drop_down_arrow"/>
            </RelativeLayout>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IFSC Code"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:editable="false"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_11sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:id="@+id/etIfsc"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:editable="false"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_11sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:id="@+id/etAccountNumber"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Holder Name*"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:editable="false"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_11sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:id="@+id/etAccountHolderName"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch Name*"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:editable="false"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_11sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:id="@+id/etBranchName"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deposit Type*"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp">
                <Spinner
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:textSize="@dimen/_11sdp"
                    android:id="@+id/spinnerDeposit"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:background="@drawable/ic_drop_down_arrow"/>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/llDepositType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction ID"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>

                    <EditText
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_11sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/etTransactionId"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llChequeNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cheque Number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>

                    <EditText
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_11sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/etChequeNumber"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llReferenceNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reference No"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>

                    <EditText
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_11sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/etReferenceNo"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>

                    <EditText
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_11sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/etBankName"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBankAccountNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank A/C No."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>

                    <EditText
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_11sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/etBankAccountNumber"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llIfsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IFSC Code*"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>

                    <EditText
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_11sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/etIfscCode"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBankBranch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Branch*"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>

                    <EditText
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangle_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_11sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:id="@+id/etBankBranch"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Date*"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:editable="false"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_11sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:id="@+id/etPaymentDate"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/etMobile"
                android:paddingLeft="@dimen/_5sdp"
                android:inputType="number"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remark"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:gravity="start"
                android:paddingTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/etRemark"
                android:inputType="number"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/bit"/>
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If Your Mobile No is not \nentered in Bank Remarks \n or\nIf the company asks\n for confirmation of payment"/>

                <Button
                    android:id="@+id/btnChooseImage"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Choose File"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/registration_background"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/warning"/>

            <Button
                android:layout_marginBottom="@dimen/_50sdp"
                android:id="@+id/btnSubmit"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="Submit"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/registration_background"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
