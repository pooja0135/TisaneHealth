<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightcream_color">

    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp">
        <TextView
            android:id="@+id/tvStep1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Step 1"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tvStep2"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Step 2"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tvStep3"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Step 3"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tvStep4"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Step 4"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sponser ID"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                />

            <EditText
                android:visibility="gone"
                android:id="@+id/etSponserID"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp" />
            <TextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sponser Name"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                />

            <EditText
                android:visibility="gone"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/etSponserName"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominee Name"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorPrimary"
                />

            <EditText
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/etNomineeName"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp" />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominee Father/Husband Name"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorPrimary"
                />

            <EditText
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/etNomineeFather"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp" />

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominee Address"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                />

            <EditText
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/etNomineeAddress"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp" />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominee Relation"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                />

            <EditText
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/etNomineeRelation"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp" />


            <CheckBox
                android:checked="true"
                android:id="@+id/checkbox"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:buttonTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_and_condititons"/>
            <Button
                android:id="@+id/btnContinue"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textSize="@dimen/_16sdp"
                android:text="Continue"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/registration_background"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
