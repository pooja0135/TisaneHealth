<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member Name"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etMemberNAme"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />
                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration Date"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:visibility="gone"
                    android:editable="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etRegistrationDate"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Of Birth"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etDob"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <RelativeLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/rectangle_grey">
                    <Spinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                       />
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Id"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:paddingLeft="@dimen/_10sdp" />
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etMobile"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pincode"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etZipcode"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etState"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etDistrict"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etCity"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />


                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flat No/House No"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etFlatNo"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Landmark"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etLandmark"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />





                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aadhar Number"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etAadharNumber"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pan Number"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/etPanNumber"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp" />


                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/registration_background"
                  />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
